server {

    listen 4006;

    listen 4406 ssl default_server;
    ssl_certificate /etc/nginx/ssl/localhost/cer.crt;
    ssl_certificate_key /etc/nginx/ssl/localhost/rsa.key;
 
    server_name _;

    root /var/www/audio-book/pwa/a2hs;

    index index.html;

    # index.html fallback
    location / {
        try_files $uri $uri/ /index.html;
    }
}
